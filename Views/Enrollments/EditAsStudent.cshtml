@model rsweb10.ViewModels.EditAsStudent

@{
    ViewData["Title"] = "EditAsStudent";
}

<h1>Edit</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAsStudent" asp-route-teacher="@ViewBag.Teacher" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Enrollment.EnrollmentID" />
            <div class="form-group">
                <label asp-for="Enrollment.CourseID" class="control-label"></label>
                <select asp-for="Enrollment.CourseID" class="form-control" asp-items="ViewBag.CourseID" readonly="@(true)"></select>
                <span asp-validation-for="Enrollment.CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.StudentID" class="control-label"></label>
                <select asp-for="Enrollment.StudentID" class="form-control" asp-items="ViewBag.StudentID" readonly="@(true)"></select>
                <span asp-validation-for="Enrollment.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.Semester" class="control-label"></label>
                <input asp-for="Enrollment.Semester" class="form-control" readonly="@(true)"/>
                <span asp-validation-for="Enrollment.Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.Year" class="control-label"></label>
                <input asp-for="Enrollment.Year" class="form-control" readonly="@(true)"/>
                <span asp-validation-for="Enrollment.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.Grade" class="control-label"></label>
                <input asp-for="Enrollment.Grade" class="form-control" readonly="@(true)"/>
                <span asp-validation-for="Enrollment.Grade" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="Enrollment.SeminalUrl" class="control-label"></label>
                <input asp-for="SeminalUrlName" class="form-control" readonly="@(true)">
                <span asp-validation-for="Enrollment.SeminalUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminalUrlFile" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="SeminalUrlFile" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile"></label>
                </div>
                <span asp-validation-for="SeminalUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.ProjectUrl" class="control-label"></label>
                <input asp-for="Enrollment.ProjectUrl" class="form-control"/>
                <span asp-validation-for="Enrollment.ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.ExamPoints" class="control-label"></label>
                <input asp-for="Enrollment.ExamPoints" class="form-control" readonly="@(true)/>
                <span asp-validation-for="ExamPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.SeminalPoints" class="control-label"></label>
                <input asp-for="Enrollment.SeminalPoints" class="form-control" readonly="@(true)/>
                <span asp-validation-for="SeminalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.ProjectPoints" class="control-label"></label>
                <input asp-for="Enrollment.ProjectPoints" class="form-control" readonly="@(true)/>
                <span asp-validation-for="ProjectPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.AdditionalPoints" class="control-label"></label>
                <input asp-for="Enrollment.AdditionalPoints" class="form-control" readonly="@(true)/>
                <span asp-validation-for="AdditionalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.FinishDate" class="control-label"></label>
                <input asp-for="Enrollment.FinishDate" class="form-control" readonly="@(true)/>
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
